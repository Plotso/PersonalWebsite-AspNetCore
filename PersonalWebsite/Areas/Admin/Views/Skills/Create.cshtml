@model PersonalWebsite.Models.InputModels.SkillCreateInputModel
@{
    ViewData["Title"] = "Add Skill";
}

<h3 class="page-heading">Add new skill</h3>
<form asp-action="Create" method="post">
    <div>
        <label asp-for="Type">Type of skill (ex: Backend, Frontend, Infrastructure)</label>
        <input asp-for="Type" class="form-control"/>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="Name">Skill name</label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <hr/>
    <div class="center-group">
        <input type="submit" class="btn btn-primary create-record-btn" value="Add Skill"/>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}