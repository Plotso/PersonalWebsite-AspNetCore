@model PersonalWebsite.Models.InputModels.ExperienceCreateInputModel
@{
    ViewData["Title"] = "Add Experience";
}

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        relative_urls: false,
        remove_script_host : false,
        convert_urls : true,
        plugins: [
            "image paste table link code media fullscreen wordcount searchreplace lists"
        ]
    });
</script>

<h3 class="page-heading">Add new experience</h3>
<form asp-action="Create" method="post">
    <div>
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control"/>
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="Company"></label>
        <input asp-for="Company" class="form-control"/>
        <span asp-validation-for="Company" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control"/>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="FromDate">Start Date</label>
        <input asp-for="FromDate" type="date" class="form-control"/>
        <span asp-validation-for="FromDate" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="ToDate">End Date</label>
        <input asp-for="ToDate" type="date" class="form-control"/>
        <span asp-validation-for="ToDate" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <hr/>
    <div class="center-group">
        <input type="submit" class="btn btn-primary create-record-btn" value="Add Experience"/>
    </div>
</form>